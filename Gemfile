source "https://rubygems.org"

# Twitter API
gem "twitter"

# Config file loading
gem "settingslogic"

# Language Detection
# gem "cld"

# Debugging
gem "pry"

gem "rake"

# asset pipelines
gem "coffee-script"
gem "sass"
gem "yui-compressor", :require => "yui/compressor"
gem "sprockets"

group :development do
  # database
  gem "sequel"
  gem "sqlite3"
  gem "jsonsql", '0.2.1'
end

gem 'sinatra'
gem 'thin'

# Coffeescript & SCSS
group :development do
  gem "guard", :require => false
  gem "guard-rake", :require => false
end

group :test do
  gem "rspec"
end